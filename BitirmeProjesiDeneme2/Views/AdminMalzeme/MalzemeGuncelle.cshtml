@model BitirmeProjesiDeneme2.Models.Malzeme
@{
    ViewData["Title"] = "MalzemeGuncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Ürün Güncelleme Sayfası</h2>
<br />
@using (Html.BeginForm("MalzemeGuncelle", "AdminMalzeme", FormMethod.Post))
{
    <div class="form-group">
        @Html.HiddenFor(x => x.Id)
        @Html.LabelFor(x => x.Ad)
        @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
        <br />
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

